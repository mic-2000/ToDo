
= form_for [@task.project, @task] do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :deadline
    = f.text_field :deadline
  .field
    = f.label :done
    = f.text_field :done
  .field
    = f.label :priority
    = f.text_field :priority

  .actions
    = f.submit 'Save'
